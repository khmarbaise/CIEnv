<assembly>
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>${artifactId}-${version}</baseDirectory>	
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>bin/**</exclude>
			</excludes>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>src/main/resources/bin</directory>
			<outputDirectory>/bin</outputDirectory>
			<excludes>
				<exclude>*.sh</exclude>
			</excludes>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/bin</directory>
			<outputDirectory>/bin</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>

		<fileSet>
			<directory>${project.build.directory}/dependency</directory>
			<outputDirectory>/webapps</outputDirectory>
			<includes>
				<include>ROOT.war</include>
			</includes>
		</fileSet>
	</fileSets>

	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>/lib</outputDirectory>
			<unpack>false</unpack>
			<excludes>
                <exclude>*:nexus-webapp</exclude>
            </excludes>
		</dependencySet>
	</dependencySets>

</assembly>

